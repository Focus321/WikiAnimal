<Window x:Class="WikiAnimal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WikiAnimal"
        mc:Ignorable="d"
       Title="MainWindow" Height="800" Width="1500" MinWidth="740" MinHeight="330" Loaded="Window_Loaded">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <WrapPanel Name="mainWrapPanel" Orientation="Horizontal" Margin="15,15,15,15"></WrapPanel>
        </ScrollViewer>
        <Button DockPanel.Dock="Bottom"  HorizontalAlignment="Right" VerticalAlignment="Bottom" Background="{x:Null}" BorderBrush="{x:Null}" Click="Button_Click" Margin="5">
            <Image Source="https://img.icons8.com/plasticine/2x/back.png" MaxHeight="50" Stretch="Uniform" ></Image>
        </Button>
    </Grid>
</Window>